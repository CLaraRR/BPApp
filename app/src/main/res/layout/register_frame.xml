<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <com.example.bpapp.view.CustomToolBar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:left_btn_visible="true"
        app:left_btn_src="@drawable/back"
        app:title_visible="true"
        app:title_text="注册"
        tools:context=".RegisterActivity">


    <RelativeLayout
        android:id="@+id/editRel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:id="@+id/usernameRe"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="#000"
                android:text="用户名"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/usernametext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:layout_toRightOf="@id/username"
                android:background="@null"
                android:hint="用户名"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pwdRe"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/usernameRe"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="#000"
                android:text="密    码"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/pwdtext"
                android:inputType="textPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:layout_toRightOf="@id/pwd"
                android:background="@null"
                android:hint="密    码"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pwdconfirmRe"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pwdRe"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/pwdconfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="#000"
                android:text="确认密码"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/pwdconfirmtext"
                android:inputType="textPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:layout_toRightOf="@id/pwdconfirm"
                android:background="@null"
                android:hint="确认密码"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sexRe"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pwdconfirmRe"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="#000"
                android:text="性    别"
                android:textSize="20sp" />
            <RadioGroup
                android:id="@+id/sexradioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_toRightOf="@id/sex"
                android:background="@null" >

                <RadioButton
                    android:id="@+id/radiomale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="男" />
                <RadioButton
                    android:id="@+id/radiofemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

            </RadioGroup>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/birthRe"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sexRe"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="#000"
                android:text="出生日期"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/birthtext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:layout_toRightOf="@id/birth"
                android:background="@null"
                android:hint="出生日期"
                android:textSize="15sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_below="@id/birthRe">

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:text="取消"
                android:textColor="#ffffff"
                android:background="@color/button"/>


            <Button
                android:id="@+id/register_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="50dp"
                android:layout_toRightOf="@id/cancel_button"
                android:text="注册"
                android:textColor="#ffffff"
                android:background="@color/button"/>
        </LinearLayout>

    </RelativeLayout>


</com.example.bpapp.view.CustomToolBar>

</LinearLayout>