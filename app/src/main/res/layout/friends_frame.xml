<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:minHeight="40dp">

    android:id="@+id/linearlayoutroot"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/id_swipe_ly"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    <com.example.bpapp.view.CustomToolBar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:left_btn_visible="true"
        app:left_btn_src="@drawable/back"
        app:title_visible="true"
        app:title_text="联系人"
        app:right_btn_visible2="true"
        app:right_btn_src2="@drawable/addcontacts"
        tools:context=".FriendsActivity">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/listView_friends"/>

    </com.example.bpapp.view.CustomToolBar>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>