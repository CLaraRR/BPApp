<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayoutroot"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <com.example.bpapp.view.CustomToolBar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:left_btn_visible="true"
        app:left_btn_src="@drawable/back"
        app:title_visible="true"
        app:title_text="添加"
        tools:context=".AddContactsActivity">


        <TextView
            android:text="请输入好友账号："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:id="@+id/textView"
            android:textSize="16dp"
            android:layout_alignParentTop="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/userAccount"
            android:inputType="textPhonetic"
            android:selectAllOnFocus="false"
            style="@style/Widget.AppCompat.EditText" />

        <Button
            android:text="确认添加"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/userAccount"
            android:layout_alignEnd="@+id/userAccount"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="145dp"
            android:layout_marginRight="60dp"
            android:layout_marginEnd="60dp"
            android:id="@+id/button_firmAdd"
            android:layout_below="@+id/userAccount"
            android:background="@drawable/button_selector"/>
    </com.example.bpapp.view.CustomToolBar>
</LinearLayout>

